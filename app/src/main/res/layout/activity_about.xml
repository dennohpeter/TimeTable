<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="?attr/cardBackground"
    android:layout_height="match_parent"
    tools:context=".About">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="102dp"

            android:layout_marginStart="116dp"
            android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:gravity="center"
        android:textColor="?attr/textColor"
        android:text="CCT TimeTable"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="107dp"
        android:layout_height="29dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:gravity="center"
        android:text="Version 1.02"
        android:textColor="?attr/textColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="53dp"
        android:textColor="?attr/textColor"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="Credits"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="116dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="?attr/textColor"
        android:paddingBottom="20dp"
        android:text="This app was created by Kenneth Murerwa."
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/feedback_button"
        android:layout_width="331dp"
        android:layout_height="58dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/rounded_buttton"
        android:text="Send Feedback"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="?attr/textColor"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_bug" />

    <Button
        android:id="@+id/report_bug"
        android:textColor="?attr/textColor"
        android:layout_width="331dp"
        android:layout_height="58dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="64dp"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/rounded_buttton"
        android:text="Report a bug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>